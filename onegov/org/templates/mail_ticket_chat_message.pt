<div metal:use-macro="layout.base" i18n:domain="onegov.org">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="body">
        <p i18n:translate>Dear Sir or Madam,</p>
        <p i18n:translate>A message has been send regarding your ticket:</p>

        <div class="inline-message" tal:content="structure message.formatted_text" />

        <p i18n:translate>
            Please visit <a href="${request.link(model, 'status')}" i18n:name="link" i18n:translate>the ticket status page</a> to reply.
        </p>

        <p><span i18n:translate>The ticket number is</span>: <span class="ticket-number">${model.number}</span></p>
    </tal:b>
</div>
