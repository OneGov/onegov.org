<tal:b i18n:domain="onegov.org">
    <metal:b use-macro="layout.macros['generic_message']">
        <metal:b fill-slot="title">
            <a href="${link}">${model.channel_id}</a> - ${model.meta.group}
        </metal:b>
        <metal:b fill-slot="text">
            <tal:b tal:content="structure model.formatted_text" />
            <div class="recipient-info" tal:condition="model.meta.recipient|nothing">
                <tal:b i18n:translate>Sent to</tal:b>
                <a href="mailto:${model.meta.recipient}">${model.meta.recipient}</a>
            </div>
        </metal:b>
    </metal:b>
</tal:b>
